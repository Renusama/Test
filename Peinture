public class Peinture extends Revetement {
    String idPeinture;
    double prix;

    public String getIdPeinture() {
        return idPeinture;
    }

    public void setIdPeinture(String idPeinture) {
        this.idPeinture = idPeinture;
    }

    public double getPrix() {
        return prix;
    }

    public void setPrix(double prix) {
        this.prix = prix;
    }

    public Peinture(String idPeinture, double prix) {
        this.idPeinture = idPeinture;
        this.prix = prix;
    }

    @Override
    public String toString() {
        return "Peinture{" + "idPeinture=" + idPeinture + ", prix=" + prix + '}';
    }
    
    public double Montant (){
        Montant = prix * surface 
    }
    
}
